<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-30Â°C"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_current_condition" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_current_temp"
        app:layout_constraintStart_toStartOf="@+id/tv_current_temp"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_temp">

        <TextView
            android:id="@+id/tv_current_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Condition"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_main_maxmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="max/min"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_current_condition"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_current_temp"
        app:layout_constraintStart_toStartOf="@+id/tv_current_temp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_hot_temperature_icons2" />
</androidx.constraintlayout.widget.ConstraintLayout>