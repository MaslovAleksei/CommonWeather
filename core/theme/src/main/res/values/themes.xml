<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.V27.Theme.CommonWeather" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white_trasparent</item>
        <item name="colorPrimaryDark">@color/blue_dark_primary</item>
        <item name="colorAccent">@color/blue_200</item>
        <item name="colorOnSurface">@color/gray_900</item>
        <item name="android:windowBackground">@color/blue_600</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Base.Theme.CommonWeather" parent="Base.V27.Theme.CommonWeather"/>


    <style name="Theme.CommonWeather.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <!--<item name="appWidgetRadius">16dp</item>-->
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <!--<item name="appWidgetInnerRadius">8dp</item>-->
    </style>

    <style name="Theme.CommonWeather.AppWidgetContainer" parent="Theme.CommonWeather.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>